# FAEN API Configuration
# The base URL for the FAEN API (without /docs suffix)
FAEN_API_URL=https://datacellarvcapi.test.ctic.es

# FAEN API credentials
FAEN_USERNAME=datacellar.developer
FAEN_PASSWORD=your_actual_password_here

# CDE API Configuration
# URL for the CDE (Consumption Data Engine) API
# Use http://host.docker.internal:5000 if CDE is running on host machine
# Use http://localhost:5000 if running without Docker
CDE_API_URL=http://host.docker.internal:5000

# Optional: Override default batch size for datapoint uploads (default: 50)
# DEFAULT_BATCH_SIZE=50

# Optional: Override number of sample records to display (default: 2)
# SAMPLE_RECORDS_DISPLAY=2

# Optional: Override max user IDs to display (default: 5)
# MAX_USER_IDS_DISPLAY=5 